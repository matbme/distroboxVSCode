{
    "name": "distroboxvscode",
    "displayName": "DistroboxVSCode",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "extensionDependencies": [
        "ms-vscode-remote.remote-containers"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "distrobox-sidebar",
                    "title": "Distrobox",
                    "icon": "assets/distrobox.svg"
                }
            ]
        },
        "views": {
            "distrobox-sidebar": [
                {
                    "id": "distrobox",
                    "name": "Containers"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "distroboxvscode.refreshContainersList",
                    "when": "view == distrobox",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "distroboxvscode.start",
                    "when": "view == distrobox && viewItem == stopped-container",
                    "group": "inline@1"
                },
                {
                    "command": "distroboxvscode.stop",
                    "when": "view == distrobox && viewItem == running-container",
                    "group": "inline@1"
                },
                {
                    "command": "distroboxvscode.attach",
                    "when": "view == distrobox && viewItem == running-container",
                    "group": "inline@2"
                }
            ]
        },
        "commands": [
            {
                "command": "distroboxvscode.refreshContainersList",
                "title": "Refresh Containers",
                "icon": "$(refresh)"
            },
            {
                "command": "distroboxvscode.start",
                "title": "Start",
                "icon": "$(debug-start)"
            },
            {
                "command": "distroboxvscode.stop",
                "title": "Stop",
                "icon": "$(debug-stop)"
            },
            {
                "command": "distroboxvscode.attach",
                "title": "Attach",
                "icon": "$(arrow-right)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.84.0",
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "@vscode/test-electron": "^2.3.6"
    }
}
